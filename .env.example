# MacBot Environment Variables
# Copy this file to .env and update values as needed

# LLM Configuration
LLAMA_MODEL_PATH=llama.cpp/models/Qwen_Qwen3-4B-Instruct-2507-Q4_K_M.gguf
LLAMA_SERVER_URL=http://localhost:8080/v1/chat/completions
LLAMA_TEMPERATURE=0.4
LLAMA_MAX_TOKENS=200
LLAMA_CONTEXT_LENGTH=4096
LLAMA_THREADS=-1

# Whisper Configuration
WHISPER_MODEL=whisper.cpp/models/ggml-base.en.bin
WHISPER_LANGUAGE=en
WHISPER_BIN=whisper.cpp/build/bin/whisper-cli

# TTS Configuration
TTS_VOICE=af_heart
TTS_SPEED=1.0

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_BLOCK_SEC=0.03
AUDIO_VAD_THRESHOLD=0.005
AUDIO_SILENCE_HANG=0.6
MICROPHONE_DEVICE=0
SPEAKER_DEVICE=0

# Service Configuration
WEB_DASHBOARD_PORT=3000
WEB_DASHBOARD_HOST=0.0.0.0
RAG_SERVER_PORT=8081
RAG_SERVER_HOST=localhost
RAG_COLLECTION_NAME=macbot_docs
RAG_DATA_DIR=rag_data

# Orchestrator Configuration
ORCHESTRATOR_CHECK_INTERVAL=10
ORCHESTRATOR_AUTO_RESTART=true

# Tool Configuration
ENABLE_TOOLS=true
SCREENSHOT_SAVE_PATH=~/Desktop
WEB_SEARCH_ENGINE=google
WEB_SEARCH_TIMEOUT=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=macbot.log

# Performance Configuration
MAX_CONCURRENT_REQUESTS=3
MEMORY_LIMIT_MB=4096
CPU_LIMIT_PERCENT=80

# Development Configuration
DEBUG=false
TESTING=false

# Optional: API Keys (if using external services)
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here
